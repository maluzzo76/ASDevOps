@model AS_CRM.PTareasComentario

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Comentario</h2>
<h3>¿Confirma la elimimación del comentario?</h3>
<hr />
<h3>@Model.Descripcion</h3>
<div>
    <hr />

    @using (Html.BeginForm("Delete", "PTareasComentarios", new { viewreturn= ViewBag.viewreturn }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <input type="button" value="Volver" class="btn btn-info" onclick="window.history.back();" />
            </div>
        </div>
    }
</div>
