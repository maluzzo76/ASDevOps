@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>@ViewBag.Title - Alusoft CRM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/Site.css")
    @Styles.Render("~/Content/Site.css")

</head>
<body style=" background-color: white;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/image/logo.png" style="zoom:65%;padding-top:10px;" />
            </div>
            <div class="navbar-collapse collapse">
                
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav" style="margin-left:100px;">

                        @foreach (var im in ((ViewData["Menu"] as IList<MenuSecurity>)))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">@im.Nombre<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @foreach (var imenu in im.ItemMenuSecurities.Where(w => w.IsActivo == true).OrderBy(o => o.Orden))
                                    {
                                        switch (imenu.Nombre)
                                        {
                                            case "Gastos":
                                                <li>@Html.ActionLink("Gastos Fijos", "Index", "GastosFijoes", null, new { @style = "font-size:10pt;" })</li>
                                                <li>@Html.ActionLink("Gastos Varios", "Index", "GastosVariables", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Plan de Cuentas":
                                                <li>@Html.ActionLink("Plan de Cuentas", "Index", "Plan_Cuentas", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Asientos":
                                                <li>@Html.ActionLink("Asientos", "Index", "Asientoes", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Comprobantes":
                                                <li>@Html.ActionLink("Comprobantes", "Index", "Comprobantes", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Certificaciones":
                                                <li>@Html.ActionLink("Certificaciones", "Index", "CertificacionHoras", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Leads":
                                                <li>@Html.ActionLink("Leads", "Index", "Leads", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Clientes":
                                                <li>@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Acuerdos":
                                                <li>@Html.ActionLink("Acuerdos", "Index", "AcuardosComerciales", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Tipo de Gastos":
                                                <li>@Html.ActionLink("Tipos de Gastos", "Index", "TipoGastoes", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Tipo de Comprobante":
                                                <li>@Html.ActionLink("Tipo de Comprobantes", "Index", "TiposComprobantes", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Proyectos":
                                                <li>@Html.ActionLink("Proyectos", "Index", "Proyectoes", null, new { @style = "font-size:10pt;" })</li>
                                                <li><a onclick="window.open('https://app.powerbi.com/Redirect?action=OpenApp&appId=9871a053-4f8d-4fdc-8a4b-c50b9d69790b&ctid=f1d336d9-7a37-432e-95a6-3d356b17c537', '_blank'),focus()">Reportes</a></li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;

                                            case "Sprint":
                                                <li>@Html.ActionLink("Sprints", "Index", "PSprints", null, new { @style = "font-size:10pt;" })</li>
                                                <li style="height: 1px; border-bottom: 1px solid #6a8ded"></li>
                                                break;
                                        }
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">

        @RenderBody()
        <!--<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>-->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


