@model AS_CRM.Controllers.PaginadorGenerico<AS_CRM.Comprobante>

@{
    ViewBag.Title = "Index";
}

<h2>Comprobantes</h2>

<button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("FileUpload","Comprobantes")'">
    Agregar Comprobante
    <span class="badge badge-light">@Model.TotalRegistros</span>
</button>


<hr />

@using (Html.BeginForm())
{
    <div class="form-horizontal ">
        <div class="form-group ">
            <input id="btnfiltrar" type="submit" value="Buscar" class="btn btn-info pull-right" />
            @Html.TextBox("SearchString", null, new { @class = "form-control pull-right col-md-10", autocomplete = "off" })
        </div>
    </div>
}



<table class="table">
    <tr style="background-image: linear-gradient(to bottom right, #6839cb, #9a82cf); color: white; border-bottom-width: 5px;">
        <th style="width:25px;">

        </th>
        <th>
            Numero
        </th>
        <th>
            Razon Social
        </th>
        <th>
            Tipo Comprobante
        </th>
        <th>
            Fecha Registración
        </th>
        <th>
            Fecha VTO
        </th>
        <th>
            Total Neto
        </th>
        <th>
            Iva
        </th>
        <th>
            IIBB
        </th>
        <th>
            Total Bruto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Resultado)
    {
        <tr style="background-color: white; border-left: 4px solid #1ea9ef; border-bottom: 2px solid #f7f7f7; border-bottom-width: 5px;">
            <td>
                @if (item.FileName != null)
                {
                    var _file = string.Format("http://{0}:{1}/files/pdf/{2}", Request.Url.Host, Request.Url.Port, item.FileName);
                    <img src="~/Content/image/pdf.png" onclick="window.open('@_file', '_blank')" class="btn-grid" style="zoom: 10%; padding-top: -50px;" />
                }
            </td>
            <td>
                @{
                    string _num = decimal.Round(item.Numero.Value, 0).ToString().PadLeft(8, char.Parse("0"));
                    <label>@_num</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiposComprobante.Acronimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistracion)
            </td>
            <td>
                @item.FechaVencimiento.Value.ToString("dd-MM-yyyy")
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.TotalNeto)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Iva)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.IIBB)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.TotalBruto)
            </td>

            <td style="width:150px">
                <a class="btn-grid" href="@Url.Action("Edit","Comprobantes", new { id = item.Id }) "><span><img src="~/Content/image/iconos_Lapiz.png" style="width:14px; height:14px;" /></span></a>
                <a class="btn-grid" href="@Url.Action("FileUpload","Comprobantes", new { id = item.Id }) "><span><img src="~/Content/image/iconos_Link 2.png" style="width:14px; height:14px;" /></span></a>
                <a class="btn-grid" href="@Url.Action("Delete","Comprobantes", new { id = item.Id }) "><span><img src="~/Content/image/iconos_Basura.png" style="width:14px; height:14px;" /></span></a>

            </td>
        </tr>
    }

</table>

<div class="container-fluid">


    <ul class="pagination  pull-right">
        @{
            if (Model.PaginaActual > 1)
            {
                <li class="page-item">@Html.ActionLink("Anterior", "Index", new { pagina = Model.PaginaActual - 1 })</li>
            }


            if (Model.PaginaActual < Model.TotalPaginas)
            {
                <li class="page-item">@Html.ActionLink("Siguiente", "Index", new { pagina = Model.PaginaActual + 1 })</li>
            }

        }
    </ul>
</div>



