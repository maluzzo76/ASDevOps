@model AS_CRM.Lead

@{
    ViewBag.Title = "Details";
}

<h2>Detalle</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card" style="width: 400px; background-color: #ffffff; border-radius: 8px; box-shadow: 5px 5px 20px 5px gray;">
                <img class="card-img-top" src="~/Content/image/lead.png" alt="Card image" style=" zoom:35%;padding-left:25%;">
                <div class="card-body">
                    <div style="padding-left:20px;padding-bottom:10px;">
                        <h3 class="card-title">@Model.Nombre_Contacto</h3>
                        <h4 class="card-text">@Model.Razon_Social</h4>
                        <hr/>
                        <p class="card-text"><span style="font-weight: bold;">Telefono:</span> @Model.Telefono_Contacto</p>
                        <p class="card-text"><span style="font-weight: bold;">Telefono:</span> @Model.Telefono2_Contacto</p>
                        <p class="card-text"><span style="font-weight: bold;">Email:</span> @Model.Email_Contacto</p>
                        <p class="card-text"><span style="font-weight: bold;">Email:</span> @Model.Email2_Contacto</p>
                        <p class="card-text"><span style="font-weight: bold;">Provincia:</span> @Model.Provincia</p>
                        <p class="card-text"><span style="font-weight: bold;">Localidad:</span> @Model.Localidad</p>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="width: 400px; background-color: #ffffff; border-radius: 8px; box-shadow: 5px 5px 20px 5px gray;">
                <div class="card-body">
                    <iframe src="@Model.Informacion_Fiscal" style="width:380px; height:510px; overflow:auto;position:absolute; margin-left:10px; margin-top:10px;padding-bottom:10px;"></iframe>
                </div>
            </div>         
        </div>
    </div>
</div>
