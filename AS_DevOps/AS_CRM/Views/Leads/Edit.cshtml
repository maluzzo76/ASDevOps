                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Voler", "Index", new { SearchString = ViewBag.buscar, SearchProv = ViewBag.buscarProv }, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div class="card" style="width: 600px; background-color: #ffffff; border-radius: 8px; box-shadow: 5px 5px 20px 5px gray;">
            <div class="card-body">
                <iframe src="@Model.Informacion_Fiscal" style="width:580px; height:750px; overflow:auto;margin-left:10px; margin-top:10px;padding-bottom:10px;"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
