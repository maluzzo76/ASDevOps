@model AS_CRM.Controllers.PaginadorGenerico<AS_CRM.CertificacionHora>

@{
    ViewBag.Title = "Certificaciones";
}
<h2>Certificaciones de Horas</h2>


<button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "CertificacionHoras")'">
    Agregar Certificación de horas
    <span class="badge badge-light">@Model.TotalRegistros</span>
    - Horas a Certificadas
    <span class="badge badge-light">$ @Model.Resultado.Sum(t => t.HorasACertificar)</span>
    - Total Importe
    <span class="badge badge-light">$ @Model.Resultado.Sum(t => t.HorasACertificar * t.ValorHora)</span>
</button>



@using (Html.BeginForm())
{
    <div class="form-horizontal ">
        <div class="form-group ">
            <input id="btnfiltrar" type="submit" value="Buscar" class="btn btn-info pull-right" />
            @Html.TextBox("SearchString", null, new { @class = "form-control pull-right col-md-10", autocomplete = "off" })
        </div>
    </div>
}
<table class="table">
    <tr style="background-image: linear-gradient(to bottom right, #6839cb, #9a82cf); color: white; border-bottom-width: 5px;">
        <th></th>
        <th>
            Factura
        </th>
        <th>
            Fecha
        </th>
        <th>
            Cliente
        </th>
        <th>
            Horas Certificadas
        </th>
        <th>
            Horas Facturadas
        </th>
        <th>
            Factura
        </th>
        <th>
            Saldo
        </th>
        <th>
            Valor Hora
        </th>
        <th>
            Importe a Facturar
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Resultado)
    {
        <tr style="background-color: white; border-left: 4px solid #1ea9ef; border-bottom: 2px solid #f7f7f7; border-bottom-width: 5px;">
            <td>
                @{
                    var _file = string.Format("http://{0}:{1}/files/pdf/{2}", Request.Url.Host, Request.Url.Port, item.DocumentoNombre);
                    <img src="~/Content/image/pdf.png" onclick="window.open('@_file', '_blank')" class="btn-grid" style="zoom: 10%; padding-top: -50px;" />
                }

            </td>
            <td>
                @if (item.Comprobante != null)
                {
                    if (item.Comprobante.FileName != null)
                    {
                        var _file1 = string.Format("http://{0}:{1}/files/pdf/{2}", Request.Url.Host, Request.Url.Port, item.Comprobante.FileName);
                        <img src="~/Content/image/pdf.png" onclick="window.open('@_file1', '_blank')" class="btn-grid" style="zoom: 10%; padding-top: -50px;" />
                    }
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasACertificar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasCertificadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comprobante.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @item.ValorHora
            </td>
            <td>
                @{
                    decimal _monto = decimal.Round(Convert.ToDecimal(item.ValorHora * item.HorasACertificar), 2);

                    <p>$ @_monto</p>
                }
            </td>
            <td style="width:150px">
                <a class="btn-grid" href="@Url.Action("Edit","CertificacionHoras", new { id = item.Id }) "><span><img src="~/Content/image/iconos_Lapiz.png" /></span></a>
                <a class="btn-grid" href="@Url.Action("Delete","CertificacionHoras", new { id = item.Id }) "><img src="~/Content/image/iconos_Basura.png" /></a>
            </td>
        </tr>
    }

</table>



<div class="container-fluid">


    <ul class="pagination  pull-right">
        @{
            if (Model.PaginaActual > 1)
            {
                <li class="page-item">@Html.ActionLink("Anterior", "Index", new { pagina = Model.PaginaActual - 1 })</li>
            }


            if (Model.PaginaActual < Model.TotalPaginas)
            {
                <li class="page-item">@Html.ActionLink("Siguiente", "Index", new { pagina = Model.PaginaActual + 1 })</li>
            }
        }
    </ul>
</div>